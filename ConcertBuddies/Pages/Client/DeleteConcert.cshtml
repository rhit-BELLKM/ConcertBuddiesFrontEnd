@page
@model ConcertBuddies.Pages.Client.DeleteConcertModel
@{
}

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<form method="POST">
    <div>
        <h4>Concertgoer</h4>
        <h5>Description: @HttpContext.Request.Query["description"]</h5>
        <h5>Location: @HttpContext.Request.Query["location"]</h5>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-secondary" href="/Client/ConcertList" role="button">Cancel</a>
            </div>
        </div>
    </div>
</form>
