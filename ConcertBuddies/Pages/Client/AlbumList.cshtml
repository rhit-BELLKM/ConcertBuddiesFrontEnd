@page
@model ConcertBuddies.Pages.Client.AlbumListModel
@using Microsoft.Web.Helpers;
@{

}


<br />
<h2> List of Albums </h2>
<a class="btn btn-primary btn-sm" href="/Client/CreateNewAlbum"> New Album </a>
<div class="row">
    <div class="col-sm-12" style="padding-bottom:20px">
        <form enctype="multipart/form-data" method="POST">
            <input type="file" name="file" />
            <button type="submit">Import from Excel</button>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listAlbum)
        {
            <tr>
                <td>@item.name</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Client/EditAlbum?id=@item.ID&name=@item.name">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Client/DeleteAlbum?id=@item.ID&name=@item.name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>